#!/bin/bash

BUILDID_FILE=${WORKSPACE}/logs/build_id

PROJECT=alps
BRANCH=master

tag=$(uuidgen | cut -d '-' -f 1)
TAG="atc${tag}"
echo "Building aurora on Google Cloud"
echo "Creating new build with tag $TAG"
aurora build -p ${PROJECT} -b ${BRANCH} --tag ${TAG}
bld_retval=$?
if [[ $bld_retval -eq 0 ]]; then
  IFS="=" read -r id BUILD_ID<${BUILDID_FILE}
  echo "Build successfully created with build id $BUILD_ID"
  echo "$BUILD_ID"
  echo "PASSED"
fi

exit $bld_retval
